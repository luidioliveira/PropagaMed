<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PropagaMed.View.MedicoView"
    x:Name="atualizaMedico"
    Title="Visualização de Médico(a)"
    BackgroundColor="#8b8a8a">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>        
            <Label Text="Nome:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
             <Entry x:Name="nomeMedico"
               Scale="0.8"     
               Placeholder="Nome"
               PlaceholderColor="#8b8a8a"
               BackgroundColor="#FFF"
               TextColor="#8b8a8a"
            />

            <Label Text="Especialidade:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
             <Entry x:Name="espMedico"
               Text="{Binding especialidade}"
               Scale="0.8"     
               Placeholder="Especialidade"
               PlaceholderColor="#8b8a8a"
               BackgroundColor="#FFF"
               TextColor="#8b8a8a"
            />

            <Label Text="Localização:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
            <Picker x:Name="localizacaoMedico"
                    SelectedItem="{Binding localizacao}"
                    Scale="0.8"
                    Title="Selecione a localização do médico"
                    TitleColor="#8b8a8a"
                    BackgroundColor="#FFF"
                    TextColor="#8b8a8a">
                <Picker.Items>
                    <x:String>Rio de Janeiro</x:String> 
                    <x:String>Niterói</x:String>
                </Picker.Items>
            </Picker> 

            <Label Text="Endereço:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
             <Entry x:Name="enderecoMedico"
               Text="{Binding endereco}"
               Scale="0.8"     
               Placeholder="Endereço"
               PlaceholderColor="#8b8a8a"
               BackgroundColor="#FFF"
               TextColor="#8b8a8a"
            />  

            <Label Text="CEP:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
             <Entry x:Name="CEPMedico"
               Text="{Binding CEP}"
               Scale="0.8"     
               Placeholder="CEP"
               PlaceholderColor="#8b8a8a"
               BackgroundColor="#FFF"
               TextColor="#8b8a8a"
            />

            <StackLayout>
                <Label Text="Data de Nascimento:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />

                 <DatePicker x:Name="aniversarioMedico"
                    Date="{Binding aniversario}"
                    Scale="0.8"
                    MinimumDate="01/01/1930"
                    BackgroundColor="#FFF"
                    TextColor="#8b8a8a"
                 />   
            </StackLayout>

            <Label Text="Telefone:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
             <Entry x:Name="telefoneMedico"
               Text="{Binding telefone}"
               Scale="0.8"     
               Placeholder="Telefone"
               PlaceholderColor="#8b8a8a"
               BackgroundColor="#FFF"
               TextColor="#8b8a8a"
            />  

            <Label Text="Celular:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
            <Entry x:Name="celularMedico"
               Text="{Binding celular}"
               Scale="0.8"     
               Placeholder="Celular"
               PlaceholderColor="#8b8a8a"
               BackgroundColor="#FFF"
               TextColor="#8b8a8a"
            />      

            <Label Text="E-mail:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
            <Entry x:Name="emailMedico"
               Text="{Binding email}"
               Scale="0.8"   
               Placeholder="E-mail"
               PlaceholderColor="#8b8a8a"
               BackgroundColor="#FFF"
               TextColor="#8b8a8a"
            />

            <Label Text="CRM:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />
            <Entry x:Name="CRMMedico"
               Text="{Binding CRM}"
               Scale="0.8"   
               Placeholder="CRM/N"
               PlaceholderColor="#8b8a8a"
               BackgroundColor="#FFF"
               TextColor="#8b8a8a"
            />

            <Label Text="Dia preferencial de visita:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />

            <StackLayout>
                <StackLayout Orientation="Horizontal" Scale="0.8">
                    <Label Text="Segunda"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       Scale="1.3"
                     />
                    <CheckBox x:Name="monday" Scale="1.2" />

                    <Label Text="Terça"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       Scale="1.3"
                     />
                     <CheckBox x:Name="tuesday" Scale="1.2" />

                    <Label Text="Quarta"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       Scale="1.3"
                     />
                    <CheckBox x:Name="wednesday" Scale="1.2" />
                </StackLayout>

                <StackLayout Orientation="Horizontal" Scale="0.8">
                    <Label Text="Quinta"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       Scale="1.3"
                     />
                    <CheckBox x:Name="thursday" Scale="1.2" />

                    <Label Text="Sexta"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       Scale="1.3"
                     />
                    <CheckBox x:Name="friday" Scale="1.2" />
                </StackLayout>
            </StackLayout>

            <Label Text="Turno preferencial de visita:"
                   TextColor="White"
                   HorizontalTextAlignment="left"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   Scale="0.8"
                 />

            <StackLayout Orientation="Horizontal" Scale="0.8">
                <Label Text="Manhã"
                    TextColor="White"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    FontFamily="Arial"
                    FontAttributes="Bold"
                    Scale="1.3"
                    />
                <CheckBox x:Name="morning" Scale="1.2" />

                <Label Text="Tarde"
                    TextColor="White"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    FontFamily="Arial"
                    FontAttributes="Bold"
                    Scale="1.3"
                    />
                <CheckBox x:Name="afternoon" Scale="1.2" />
                
                <Label Text="Noite"
                    TextColor="White"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    FontFamily="Arial"
                    FontAttributes="Bold"
                    Scale="1.3"
                    />
                <CheckBox x:Name="night" Scale="1.2" />
            </StackLayout>

            <Button x:Name="atualizarMedico" 
               Text="Atualizar Médico(a)"
               TextColor="#FFF"
               HorizontalOptions="Fill"
               VerticalOptions="CenterAndExpand"
               Clicked="atualizarMedicoClicado"
            />
        </StackLayout>            
    </ScrollView>
    </ContentPage.Content>
</ContentPage>
